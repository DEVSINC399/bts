%section.content-header.some( style='padding: 10px 15px !important;' )
    %h1 Bugs

    .box.box-primary
        .box-header
            %i.fa.fa-list.some( style='padding-top: 6px;' )
            %h3.box-title.some( style='padding-top: 6px;' )
                List
                = link_to 'Add new Bug', new_bug_path, class: 'btn btn-success pull-right'            
        .panel-body.table-responsive
            %table#users-table.table-stripped.table.table-bordered
                %thead
                    %tr
                        %th S:No
                        %th User Name
                        %th Email
                        %th Role
                        %th Actions
                %tbody
                    - if @bugs.any?
                        - @bugs.each_with_index do |user, i|
                            %tr
                                %td= i+1
                                %td= user.name
                                %td= user.email
                                %td= user.role.name
                                %td
                                    - unless user.role_id == '1'
                                        = link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure to delete the user?' }, class: 'btn btn-danger btn-xs'
                    - else
                        %tr
                            %td.some(colspan = '5') No Bugs Found                    
                        