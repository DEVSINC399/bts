%section.content-header.some( style='padding: 10px 15px !important;' )
    %h1 Bugs

    .box.box-primary
        .box-header
            %i.fa.fa-list.some( style='padding-top: 6px;' )
            %h3.box-title.some( style='padding-top: 6px;' )
                List
                = link_to 'Add new Bug', new_bug_path, class: 'btn btn-success pull-right'            
        .panel-body.table-responsive
            %table#users-table.table-stripped.table.table-bordered
                %thead
                    %tr
                        %th S:No
                        %th Title
                        %th Description
                        %th Reported By
                        %th Resolved By
                        %th Actions
                %tbody
                    - if @bugs.any?
                        - @bugs.each_with_index do |bug, i|
                            %tr
                                %td= i+1
                                %td= bug.title
                                %td= bug.description
                                %td= bug.creator.name
                                %td N/A
                                %td
                                    = link_to 'Edit', edit_bug_path(bug), class: 'btn btn-info btn-xs mb-5'
                                    = link_to 'Delete', bug_path(bug), method: :delete, data: { confirm: 'Are you sure to delete the bug?' }, class: 'btn btn-danger btn-xs'
                    - else
                        %tr
                            %td.some(colspan = '6') No Bugs Found                    
                        