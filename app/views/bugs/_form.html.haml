= simple_form_for @bug do |f|
    .field
        = f.input :title, autofocus: true, autocomplete: 'title'
    .field
        = f.input :description, autocomplete: 'description'
    .field
        = f.label :bug_type, 'Bug Type'
        %br/
        = f.collection_select :bug_type, $types, :to_s, :to_s, {:prompt => 'Select a Type'}, autocomplete: 'bug_type', class: 'form-control'
    %br.field
        = f.input :deadline, autocomplete: 'deadline'        
    .field
        = f.button :submit, class: 'btn btn-success'