= simple_form_for @project do |f|
    .field
        = f.input :title, autofocus: true, autocomplete: "title"
    .field
        = f.input :description, autocomplete: "description"
    .field
        = f.input :link, autocomplete: "link"
    = f.label 'Project Members'
    .field
        = f.collection_select :user_ids, @users, :id, :name, {}, {multiple: true}
    .field
        = f.button :submit, class: 'btn btn-success'